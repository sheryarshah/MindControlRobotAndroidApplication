<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mind.king.mindcontrolrobot" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ControlBrightnessActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_control_brightness"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".RoombaAcclerometerActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_roomba_acclerometer"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".RoombaButtonControlActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_roomba_button_control"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".RoombaMindActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_roomba_mind"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".UserSettingsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_user_settings"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".SpeedDialActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_speed_dial"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".SensorCalibrationActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_sensor_calibration"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".RoombaControlActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_roomba_control"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".UserSpeedSettingsActivity"
            android:label="@string/title_activity_user_speed_settings" >
        </activity>
    </application>

</manifest>
